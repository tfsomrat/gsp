{%- capture section_id -%}slider-{{block.id}}{%- endcapture -%}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            {%- if block.settings.title != blank -%}
            <h2 class="title text-center mb-3 mb-sm-5">{{ block.settings.title }}</h2>
            {%- endif -%}
        </div>
    </div>
    <div class="row pb-4 {{ section_id }}">
