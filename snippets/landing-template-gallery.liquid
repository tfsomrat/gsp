                    <img loading="lazy" class="br-5 {% if block.settings.text7 == blank %}mb-4 pb-1{% endif %}" src="{{ block.settings.image7 | img_url: 'master' }}" alt="">
                
                {% if block.settings.text7 != blank%}
                <p class="mt-3 mb-4 mt-md-3 mb-md-0">{{ block.settings.text7 }}</p>
                {% endif %}
                {% if block.settings.link7 != blank %}
                </a>
                {% endif %}
            </div>
            <div class="col-md-3 text-center">
                {% if block.settings.link8 != blank %}
                <a class="landing-link" href="{{ block.settings.link8 }}">
