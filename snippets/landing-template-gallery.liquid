    {%- if block.settings.button_text != blank -%}
        <div class="col-12 text-center">
            {% if block.settings.enable_text_link %}
                <a class="call-to-action mb-0" href="{{ block.settings.link }}">{{ block.settings.button_text }} {% render 'icon-chevron', fill_color: "#3eaafd", direction: "right" %}</a>
            {% else %}
                <a class="button tertiary mb-0" href="{{ block.settings.link }}">{{ block.settings.button_text }}</a>
            {% endif %}
        </div>
    {%- endif -%}

    <style>
        .landing-link:hover {
            opacity: .7;
            text-decoration: none;
        }

        .landing-link p,
        .landing-link:hover p,
        .landing-link p:hover {
            color: #000;
            text-decoration: none;
        }
    </style>
    <script>
        function sliderMobile() {
            if($(window).width() <= 768) {
                $('.{{ section_id }}').slick({
                    slidesToShow: 2,
                    slidesToScroll: 1,
                    dots: false,
                    infinite: true,
                    arrows: false,
                    responsive: [
                        {
                            breakpoint: 480,
                            settings: {
                                slidesToShow: 1,
                                slidesToScroll: 1
                            }
                        }
                    ]
                });
            } else {
                $('.test-slider').slick('unslick');
            }
        }

        sliderMobile();
        $(window).resize(sliderMobile);
    </script>
</div>