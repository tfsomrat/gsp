<footer class="site-footer">
  <div class="page-width container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6 col-lg-3">
        <h3 class="footer__subheading subheading">
          {{ section.settings.footer_linklist_1_title }}
        </h3>
        <ul class="footer__list">
          {% for link in linklists['footer-categories'].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="col-12 col-sm-12 col-md-6 col-lg-3">
        <h3 class="footer__subheading subheading">
          {{ section.settings.footer_linklist_2_title }}
        </h3>
        <ul class="footer__list">
          {%- for link in linklists[section.settings.footer_linklist_2_links].links -%}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
      <div class="col-12 col-sm-12 col-md-6 col-lg-3">
        <h3 class="footer__subheading subheading">Get Set Connect</h3>
        {%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram, TikTok, Tumblr, YouTube, Vimeo, Google'
          | split: ', '
        -%}
        <ul class="footer__social-icons">
          {% for social in social_accounts %}
            {%- assign social_handle = social | handleize -%}
            {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
            {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}
            {% if settings[social_link] != blank %}
              <li>
                <a
                  href="{{ settings[social_link] }}"
                  class="{{ social_icon }}"
                  title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}"
                >
                  {% render social_icon %}
                  <span class="icon-fallback-text">{{ social }}</span>
                </a>
              </li>
            {% endif %}
          {% endfor %}
          <li>
            <a
              href="/blogs/news"
              class="{{ social_icon }}"
              title="Get Set Pet News"
            >
              {% render 'icon-news' %}
            </a>
          </li>
        </ul>
      </div>
      <div class="col-12 col-sm-12 col-md-6 col-lg-3">
        <h3 class="footer__subheading subheading">Accepted Payments</h3>
        {% unless shop.enabled_payment_types == empty %}
          <span class="visually-hidden">
            {{- 'layout.footer.payment_methods' | t -}}
          </span>
          <ul class="footer__payment-icons">
            {% for type in shop.enabled_payment_types %}
              <li>
                {{ type | payment_type_svg_tag: class: 'icon' }}
              </li>
            {% endfor %}
          </ul>
        {% endunless %}

        <script
          src="https://widget.reviews.co.uk/rich-snippet-reviews-widgets/dist.js"
          type="text/javascript"
        ></script>
        <div id="text-banner-widget"></div>

        <script>
          richSnippetReviewsWidgets('text-banner-widget', {
            store: 'get-set-pet',
            starsClr: '#f47e27',
            textClr: '#313131',
            logoClr: '#12cf6c',
            widgetName: 'text-banner',
            css: '.TextBanner{margin: 0; background-color: #fff; padding: 18px 0 20px 0; border-radius: 6px;}',
          });
        </script>
      </div>
    </div>
  </div>
</footer>
<section class="footer__copyright">
  <div class="container">
    <div class="row text-center">
      <div class="col-12 col-sm-12">
        &copy; {{ 'now' | date: '%Y' }} GetSetPet Ltd. All Rights Reserved.
      </div>
    </div>
  </div>
</section> {% endcomment %}

