  footer .copywrite {
    margin-top: 16px;
    border-top: 0.5px solid #dadada;
    text-align: center;
    color: #dadada;
    padding-top: 8px;
    padding-bottom: 16px;
    font-size: 8px;
    line-height: 12px;
  }

  @media only screen and (max-width: 575px) {
    .has-border > * > * {
      padding-block: 32px;
    }

    .has-border > *:not(:last-child) > * {
      border-bottom: 1px solid #fff;
    }
  }
</style>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "footer_linklist_1_title",
        "label": "Footer Column 1 Title",
        "default": "Ask the Expert"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_1_links",
        "label": "Footer Column 1 Links",
        "default": "footer"
      },
      {
        "type": "text",
        "id": "footer_linklist_2_title",
        "label": "Footer Column 2 Title",
        "default": "More Info"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_2_links",
        "label": "Footer Column 2 Links",
        "default": "footer"
      }, {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }
{% endschema %}