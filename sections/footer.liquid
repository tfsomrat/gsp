    line-height: 21px;
    color: #fff;
  }

  footer .footer-content-row .footer-column li:not(:last-child) {
    margin-bottom: 8px;
  }

  footer .social-icons {
    display: flex;
    list-style: none;
    padding: 0;
  }

  footer .social-icons li a {
    width: 28px;
