<section class="container icon-text-container" >
    <div class="row">
        <div class="col-12 col-sm-12 text-center">
            <hr>
            <h2 class="title">Reasons To Shop With Us</h2>
        </div>
        {% for block in section.blocks %}
        <div class="col-6 col-sm-6 col-md-4 icon-text-column" >
            <div class="icon-rounded-circle">
                <div>
                    <img loading="lazy" src="{{ block.settings.image | img_url: "250x250x" }}" alt="{{ block.settings.heading }}">
                </div>
            </div>
            <div class="content">
                <h2 class="section">{{ block.settings.heading }}</h2>
                <h3 class="subheading">{{ block.settings.subheading }}</h3>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
<style>
.icon-rounded-circle {
    background: #3eaafd;
    width: 120px;
    text-align: center;
    height: 120px;
    border-radius: 100%;
    margin-right: 0px;
    display: inline-block;
    vertical-align: top;
}

@media(max-width: 768px) {
    .icon-rounded-circle {
        height: 100px;
        width: 100px;
    }
}

.icon-rounded-circle div {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.icon-text-column .content {
    display: inline-block;
    width: 50%;
    padding-left: 25px;
    padding-top: 25px;
}

.icon-text-column {
    margin: 25px 0px;
}

.icon-text-container {
    margin-bottom: 40px;
}

.icon-text-container h2 {
    margin-bottom: 0px;
    padding-top: 0px;
}

@media(max-width: 980px) {
    .icon-text-column  {
        text-align: center;
    }
}

@media(max-width: 1280px) {
    .icon-text-column .content {
        /* width: 65%; */
    }
}

@media(max-width: 980px) {
    .icon-text-column .content {
        width: 100%;
        padding: 0px;
    }
}

.icon-text-column h2 {
    font-weight: 600;
    margin-top: 0px;
    margin-bottom: 5px;
}

@media(max-width: 1200px) {
    .icon-text-column h2 {
        font-size: 16px;
        padding-left: 10px;
    }
}


.icon-text-column h3 {
    color: #595959;
    font-weight: 500;
    font-size: 14px;
    margin: 0px;
}

@media(max-width: 1200px) {
    .icon-text-column h3 {
        font-size: 12px;
        padding-left: 10px;
    }
}

@media(max-width: 768px) {
    .icon-text-column h2, .icon-text-column h3 {
        padding-left: 0px!important;
    }
}


.icon-rounded-circle img {
    width: 50px;
}
</style>
{% schema %}
    {
    "name": "Icons & Text",
    "blocks" : [
        {
        "type": "Column",
        "name": "Icons & Text",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "subheading",
                "label": "Subheading"
            }
        ]
    }
    ],
        "presets": [
            {
                "name": "Icons & Text",
                "category": "text"
            }
        ]
    }
{% endschema %}
