<section class="subscribe">
  <div class="container">
    <div class="col-lg-5 text-center mx-auto">
      <div class="hand-img">
        <img
          width="170"
          height="118"
          loading="lazy"
          src="{{ 'hand.png' | asset_img_url }}"
          alt="hand" />
      </div>
      <a href="{{ section.settings.subscribe_link }}" class="subscribe-button">Subscribe & Save</a>
      <h3>{{ section.settings.title }}</h3>
    </div>
    <div class="text-center pet-subscribe">
      <img
        class="main-img"
        width="auto"
        height="auto"
        loading="lazy"
        src="{{ 'subscribe-dogs.png' | asset_img_url: "1920x" }}"
        alt="dogs" />
      <div class="subscribe-title d-flex align-items-center">
        <h4>Itâ€™s so <br/>easy</h4>
        <div class="subscribe-button mx-2">
          <img
            width="auto"
            height="auto"
            loading="lazy"
            src="{{ 'hand.png' | asset_img_url }}"
            alt="hand" />
          <span>Subscribe&Save</span>
        </div>
        <h2>
          To join, just select Subscribe & Save when you add to your
          shopping cart.
        </h2>
      </div>
    </div>

    <div class="row subscribe-cards g-3 g-lg-2">
      {% for block in section.blocks %}
        <div class="col-lg-4 mb-4">
          <div class="subscribe-card">
            <h1 class="text-white mb-2">{{ forloop.index }}</h1>
            <h3 class="text-white">{{ block.settings.title }}</h3>
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center">
      <a href="{{ section.settings.shop_link }}" class="shop-now">SHOP NOW</a>
    </div>
  </div>
</section>

<!-- Style -->
<style>
  .subscribe {
    padding: 85px 0;
    position: relative;
    z-index: 1;
  }

  .has-gradient {
    background: linear-gradient(124.18deg, #78b4e0 30.53%, #d9eaf6 70.22%);
    padding: 32px 40px;
    border-radius: 32px;
  }

  .subscribe h3 {
    font-weight: 400;
    font-size: 18px;
  }

  @media only screen and (min-width: 768px) {
    .subscribe h3 {
      font-size: 36px;
    }
  }

  .subscribe .hand-img img {
    width: 105px;
    height: 73px;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .hand-img img {
      width: auto;
      height: auto;
    }
  }

  .subscribe .subscribe-button {
    display: inline-block;
    margin-top: 3px;
    border: none;
    border-radius: 50px;
    font-weight: 700;
    padding: 9px 27px;
    text-align: center;
    font-style: italic;
    font-size: 14px;
    line-height: 21px;
    color: #fff;
    background-color: #6eafde;
    margin-bottom: 20px;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .subscribe-button {
      font-size: 31px;
      line-height: 48px;
    }
  }

  .pet-subscribe {
    display: none;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .pet-subscribe {
      display: block;
      margin-top: -50px;
    }
  }

  .subscribe .main-img {
    transform: translateY(15%);
  }

  .subscribe .subscribe-title {
    border: 1px solid #6eafde;
    font-size: 24px;
    line-height: 37px;
    font-weight: 700;
    color: black;
    border-radius: 60px;
    padding: 6px 43px;
    max-width: 1198px;
    margin: auto;
  }

  .subscribe .subscribe-title img {
    width: 50px;
    height: 38px;
  }

  .subscribe .subscribe-title span {
    font-style: italic;
    color: #fff;
  }

  .subscribe .subscribe-title .subscribe-button {
    padding: 0;
    background: #fff;
  }

  .subscribe .subscribe-title .subscribe-button span {
    background: #fff;
    font-size: 11px;
    color: #fff;
    line-height: 16px;
    background-color: #67b77c;
    padding: 6px;
    display: block;
    border-radius: 20px;
  }

  .subscribe .subscribe-title h4 {
    color: #67b77c;
    font-size: 30px;
    font-weight: 700;
  }

  .subscribe .subscribe-title h2 {
    font-weight: 700;
    line-height: 36px;
    font-size: 24px;
    font-style: italic;
  }

  .subscribe-cards {
    margin-top: 0;
  }

  @media only screen and (min-width: 768px) {
    .subscribe-cards {
      margin-top: 32px;
    }
  }

  .subscribe .subscribe-card {
    background: #e75184;
    text-align: center;
    color: #fff;
    border-radius: 32px;
    padding: 20px 20px 10px;
    height: 100%;
  }


  .subscribe-cards > *:nth-child(2) > * {
    background: #67b77c;
  }

  .subscribe-cards > *:nth-child(3) > * {
    background: #6eafde;
  }

  .subscribe .subscribe-card h1 {
    font-weight: 700;
    font-size: 30px;
    line-height: 40px;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .subscribe-card h1 {
      font-size: 75px;
      line-height: 70px;
    }
  }

  .subscribe .subscribe-card h3 {
    font-size: 20px;
    font-weight: 700;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .subscribe-card h3 {
      font-size: 28px;
    }
  }

  .subscribe .subscribe-card p {
    font-size: 14px;
    font-weight: 500;
    color: #E5E5E5;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .subscribe-card p {
      font-size: 18px;
    }
  }

  .subscribe .shop-now {
    margin-top: 16px;
    background: #1c75ba;
    border-radius: 50px;
    font-weight: 700;
    text-align: center;
    color: #fff;
    padding: 12px 50px;
    border: none;
    box-shadow: 6px 6px 12px #000000;
    font-size: 14px;
    display: block;
    width: 100%;
  }
  .subscribe .shop-now:hover {
    box-shadow: 6px 6px 6px #000000;
    text-decoration: none;
    color: #fff;
  }

  @media only screen and (min-width: 768px) {
    .subscribe .shop-now {
      line-height: 54px;
      font-size: 32px;
      padding: 18px 50px;
      width: 300px;
      margin: 32px auto auto;
    }
  }
</style>


<!-- Schema -->
{% schema %}
  {
    "name": "Subscribe",
    "max_blocks": 3,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Pet supplies delivered on <br/> your schedule"
      }, {
        "type": "url",
        "id": "subscribe_link",
        "label": "Subscribe Link"
      }, {
        "type": "url",
        "id": "shop_link",
        "label": "Shop Now Link"
      }
    ],
    "blocks": [
      {
        "type": "step",
        "name": "Step",
        "settings": [
          {
            "label": "Title",
            "type": "text",
            "id": "title"
          }, {
            "label": "Content",
            "type": "richtext",
            "id": "content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Subscribe",
        "category": "Modules"
      }
    ]
  }
{% endschema %}