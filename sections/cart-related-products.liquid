{%- assign collection = collections[section.settings.collection] -%}
<div class="container mt-5" style="max-width: 1400px; margin: auto;">
	<div class="row">
		<div class="col-12 col-sm-12 text-center">
			<header>
                <h2 class="subtitle mb-5">Related Products</h2>
			</header>
		</div>
	</div>
	<div class="{{ collection.handle }}-slider">
		{% for product in collection.products limit: 12 %}
		{%- assign current_variant = product.selected_or_first_available_variant -%}
        <div class="col-12 col-sm-12 col-md-6 col-lg-3">
            <div class="collection__listing-item">
                {% if product.featured_image != blank %}
                <div class="collection__listing-image">
                    <a href="{{ product.url | within: collection }}">
                        <img loading="lazy" src="{{ product.featured_image | img_url: '250x250' }}" alt="">
                    </a>
                </div>
                {% else %}
                <div class="collection__listing-image">
                    <img loading="lazy" style="background: #58b0e3;" src="{{ 'missing-image.svg' | asset_url }}" alt="">
                </div>
                {% endif %}
                <h3 class="collection__listing-item-title">
                    <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
                </h3>
                <p class="collection__listing-item-price">
                    {{ current_variant.price | money }}
                </p>
            </div>
        </div>
		{% endfor %}
	</div>
</div>
{% schema %}
  {
    "name": "Cart Slider",
    "settings": [
    {
        "type":      "collection",
        "id":        "collection",
        "label":     "Collection"
     }
    ]
  }
{% endschema %}
<style>
.{{ collection.handle }}-slider .slick-prev {
	left: -35px;
}

.{{ collection.handle }}-slider .slick-next {
	right: -25px;
}
@media(max-width: 768px){
  .{{ collection.handle }}-slider .slick-list{
    height:auto!important;
  }
}
.{{ collection.handle }}-slide {
	text-align: center;
	border-radius: 5px;
	box-shadow: 0 0 8px 0 #E6E5E5;
	margin: 10px;
}

.{{ collection.handle }}-slide img {
	margin: auto;
	padding: 20px 10px 10px 10px;
}

.{{ collection.handle }}-slide .detail, .{{ section_id }}-slide .detail a {
	color: black;
	text-decoration: none;
	margin: 15px 0px 25px;
	font-size: 14px;
	font-family: 'Open Sans', sans-serif;
	font-weight: bold;
}

</style>
<script>
$(document).ready(function(){

	$('.{{ collection.handle }}-slider').slick({
		infinite: true,
		slidesToShow: 6,
		slidesToScroll: 1,
		arrows: true,
		adaptiveHeight: true,
		responsive: [
			{
				breakpoint: 1200,
				settings: {
					arrows: false,
					centerMode: true,
					centerPadding: '40px',
					slidesToShow: 4,
					slidesToScroll: 1
				}
			},
			{
				breakpoint: 920,
				settings: {
					arrows: false,
					centerMode: true,
					centerPadding: '40px',
					slidesToShow: 3,
					slidesToScroll: 1
				}
			},
			{
				breakpoint: 768,
				settings: {
					arrows: false,
					centerMode: true,
					centerPadding: '40px',
					slidesToShow: 1,
					slidesToScroll: 1
				}
			}
		]
	});
});
</script>
