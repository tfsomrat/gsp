{%- for block in section.blocks -%}
	{%- case block.type -%}
		{%- when 'image-only' -%}
			{% render 'landing-template-image-only', block: block %}
		{%- when 'text-only' -%}
			{% render 'landing-template-text-only', block: block %}
		{%- when 'text-image-bg' -%}
			{% render 'landing-template-text-image-bg', block: block %}
		{%- when 'text-image' -%}
			{% render 'landing-template-text-image', block: block %}
		{%- when 'video' -%}
			{% render 'landing-template-video', block: block %}
		{%- when 'html-embed' -%}
			{% render 'landing-template-html-embed', block: block %}
		{%- when 'gallery' -%}
			{% render 'landing-template-gallery', block: block %}
		{%- when 'contact' -%}
			{% render 'landing-template-contact', block: block %}
		{%- when 'product' -%}
			{% render 'landing-template-product', block: block %}
		{%- when 'collection' -%}
			{% render 'landing-template-collection', block: block %}
		{%- when 'collections' -%}
			{% render 'landing-template-collections', block: block %}
		{%- when 'articles' -%}
			{% render 'landing-template-articles', block: block %}
	{%- endcase -%}
{%- endfor -%}

<style>
  .text-image-bg {
    position: relative;
    padding: 100px 0px;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .text-image-bg--text {
    position: absolute;
    top: 0;
    width: 80%;
    height: 100%;
  }

  .resp-container {
    position: relative;
    overflow: hidden;
    padding-top: 56.25%;
  }
  .resp-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .{{ collection.handle }}-slider .slick-prev {
  	left: -35px;
  }

  .{{ collection.handle }}-slider .slick-next {
  	right: -25px;
  }
  @media(max-width: 768px){
    .{{ collection.handle }}-slider .slick-list{
      height:auto!important;
    }
  }
</style>

<script>
  $(document).ready(function(){

  	$('.{{ collection.handle }}-slider').slick({
  		infinite: true,
  		slidesToShow: 6,
  		slidesToScroll: 1,
  		arrows: true,
  		adaptiveHeight: true,
  		responsive: [
  			{
  				breakpoint: 1200,
  				settings: {
  					arrows: false,
  					centerMode: true,
  					centerPadding: '40px',
  					slidesToShow: 4,
  					slidesToScroll: 1
  				}
  			},
  			{
  				breakpoint: 920,
  				settings: {
  					arrows: false,
  					centerMode: true,
  					centerPadding: '40px',
  					slidesToShow: 3,
  					slidesToScroll: 1
  				}
  			},
  			{
  				breakpoint: 768,
  				settings: {
  					arrows: false,
  					centerMode: true,
  					centerPadding: '40px',
  					slidesToShow: 1,
  					slidesToScroll: 1
  				}
  			}
  		]
  	});
  });
</script>

