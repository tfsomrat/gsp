<header
  id="page-header"
  class="site-header"
  data-section-id="{{ section.id }}"
  data-section-type="header-section">
  <div class="container">
    <div class="row header-top">
      <!-- START Mobile Menu -->
      <div class="col-2 col-sm-4 align-self-center align-self-sm-center mobile-menu-button d-flex justify-content-center align-items-center d-sm-block d-md-block d-lg-none text-left">
        {% render 'icon-menu-icon' %}
      </div>
      <!-- END Mobile Menu -->
      <!-- START Logo -->
      <div class="col-8 col-sm-4 col-md-4 col-lg-4 col-xl-3 d-flex justify-content-center align-items-center align-self-centertext-center align-middle text-lg-left logo-wrapper">
        <a href="/">
          <img
            loading="eager"
            height="auto"
            width="auto"
            class="header__logo"
            src="{{ 'gsp-logo.png' | asset_img_url: '320x' }}"
            alt="{{ shop.name }}">
        </a>
      </div>
      <!-- END Logo -->
      <!-- START Search -->
      <div class="d-none d-sm-none d-md-none d-lg-block col-lg-5 col-xl-6 text-center search-h align-self-center">
        <div class="header__search">
          {% render 'search' %}
        </div>
      </div>
      <!-- END Search -->
      <!-- START Account and Cart -->
      <div class="col-2 col-sm-4 col-md-4 col-lg-3 align-self-center">
        <ul class="header__cta--list d-flex d-md-block justify-content-end align-items-center">
          <li class="has-submenu">
            Help
            <ul style="width: 175px; left: -60px; top: 45px;">
              <div class="arrow-up"></div>
              <li
                style="padding-top:5px;"
                class="intercom-click"
                onclick="ga('send', 'event', 'Help', 'Click', 'Chat');">
                Instant Chat
              </li>
              <li>
                <a
                  class="contact-us"
                  href="/pages/contact-us"
                  onclick="ga('send', 'event', 'Help', 'Click', 'Contact');">Contact Us</a>
              </li>
              <li>
                <a href="/pages/faqs#shipping" onclick="ga('send', 'event', 'Help', 'Click', 'Delivery');">Delivery Information</a>
              </li>
              <li>
                <a href="/pages/faqs" onclick="ga('send', 'event', 'Help', 'Click', 'FAQs');">FAQs</a>
              </li>
            </ul>
          </li>
          <li class="has-submenu">
            Your Account
            <ul>
              <div class="arrow-up"></div>
              {% if customer %}
                <li>
                  <a style="padding-top:5px;" href="/account">Orders</a>
                </li>
                <li>
                  <a href="/account/addresses">My Details</a>
                </li>
                <li>
                  <a href="/account?view=my-pets">My Pets</a>
                </li>
                <li>
                  <a href="/account/logout">Log Out</a>
                </li>
              {% else %}
                <li>
                  <a href="/account">Sign In</a>
                </li>
                <li>
                  <a href="/account/register">Register</a>
                </li>
              {% endif %}
            </ul>
          </li>
          <li class="head-icon d-xs-inline-block d-lg-none p-0 cat-icon">
            <a class="p-0 d-flex justify-content-center align-items-center" href="/account">
              {%- render 'icon-account-welcome' -%}
            </a>
          </li>
          {% liquid
              assign has_collect = false
            %}
          {% liquid
              for item in cart.items
                if item.product.title == 'Click & Collect'
                  assign has_collect = true
                endif
              endfor
            %}
          {% if has_collect %}
            {% assign cart_amount = cart.items.size | minus: 1 %}
          {% else %}
            {% assign cart_amount = cart.items.size %}
          {% endif %}
          <li class="head-icon p-0">
            <a
              class="header__cart-price d-flex justify-content-center align-items-center"
              href="/cart"
              title="You have {{ cart_amount }} item(s) in your basket">
              {%- render 'dynamic-cart-icon' -%}
              <span class="item_count cart-count{% if cart_amount <= 0 %} hidden-count{% endif %}">
                {{- cart_amount -}}
              </span>
            </a>
          </li>
        </ul>
      </div>
      <!-- END Account and Cart -->

      <div class="col-12 col-lg-12 d-none d-sm-none d-md-none d-lg-block mt-4">
        <div class="nav-holder">
          <ul class="site-nav">
            {% for link in linklists['main-menu-test'].links %}
              <li class="top-level">
                <a class="top_level_a" href="{{ link.url }}">
                  {{- link.title -}}
                  {%- if link.links != blank -%}
                    {%- render 'icon-chevron'
                      , fill_color: '#ffffff',
                      direction: 'down' -%}
                  {%- endif -%}
                </a>
                {% assign toplevelink = link.url %}
                {% if link.links != blank %}
                  <div class="dropdown" style="visibility: hidden;">
                    <ul>
                      {% for link in link.links limit: 3 %}
                        <li id="{{ link.handle }}">
                          <a href="{{ link.url }}">{{ link.title }}</a>
                          {% if link.links != blank %}
                            <ul>
                              {% for link in link.links limit: 11 %}
                                <li id="{{ link.handle }}">
                                  <a href="{{ link.url }}">
                                    {{- link.title | remove_first: '|' -}}
                                  </a>
                                </li>
                                {%- if forloop.index == 11 -%}
                                  <li id="seemore">
                                    <a href="{{ toplevelink }}">See More</a>
                                  </li>
                                {%- endif -%}
                              {% endfor %}
                            </ul>
                          {% endif %}
                        </li>
                        {% if forloop.last %}
                          {% if forloop.length == 1 %}
                            <li></li>
                            <li></li>
                          {% endif %}
                          {% if forloop.length == 2 %}
                            <li></li>
                          {% endif %}
                        {% endif %}
                      {% endfor %}

                      <li style="text-align: center;">
                        {% for block in section.blocks %}
                          {%- if block.settings.page contains link.handle -%}
                            <img
                              loading="lazy"
                              height="auto"
                              width="auto"
                              src="{{ block.settings.image | image_url: width: 500 }}"
                              alt="">
                          {% endif %}
                        {% endfor %}
                      </li>
                    </ul>
                  </div>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <!-- START Search -->
      <div class="d-block d-sm-block d-md-block d-lg-none col-md-12 mt-4 text-center search-h align-self-center">
        <div class="header__search">
          {% render 'search' %}
        </div>
      </div>
      <!-- END Search -->
    </div>
  </div>
</header>

{% render 'mobile-menu' %}

<style>
  ul.site-nav li:hover .dropdown {
    opacity: 1;
    visibility: visible !important;
    font-size: 16px;
    left: 0;
    width: 100%;
    transition-delay: 0.3s;
    -webkit-transition-delay: 0.3s;
  }
  ul.site-nav li .dropdown li img {
    margin: 0 auto;
  }
  ul.site-nav li:hover .dropdown ul {
    position: unset;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 30px;
    background: none;
    box-shadow: none;
    border-radius: 0;
    padding: 30px;
    margin: 0;
  }
  ul.site-nav li:hover .dropdown ul ul {
    width: 100%;
    display: block;
    padding: 0 40px 0 0 !important;
  }
  ul.site-nav li:hover .dropdown ul > li a {
    border-bottom: 1px solid #e6e6e6;
    color: #000;
    padding-bottom: 10px;
    font-weight: 400;
    font-size: 18px;
    margin-bottom: 10px;
    line-height: 1.5;
    display: block;
  }
  ul.site-nav li:hover .dropdown ul ul li {
    display: block;
  }
  ul.site-nav li:hover .dropdown ul ul li#seemore a {
    color: #17a2b8;
    font-weight: bold;
  }
  ul.site-nav li:hover .dropdown ul ul a {
    font-size: 16px;
    line-height: 1.5;
    font-weight: 500;
    padding: 2px 0;
    display: block;
    color: #7e7e7e;
    text-decoration: none;
    text-transform: none;
    border: none !important;
  }

  @media(max-width: 998px) {
    .intercom-launcher-frame {
      bottom: 10px !important;
    }
  }
</style>

<script>
  $(document).ready(function() {
    $('.has-submenu').click(function() {
      $('.has-submenu').not(this).removeClass('active');
      $(this).toggleClass('active');
    });

    $('.has-submenu ul').mouseleave(function() {
      $('.has-submenu').delay(300).removeClass('active');
    });

    $('.has-submenu ul').mouseleave(function() {
      $('.has-submenu').delay(300).removeClass('active');
    });
  });
</script>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ],
    "max_blocks": 10,
    "blocks": [
      {
        "type": "CTA",
        "name": "Mega Menu Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
          }, {
            "type": "url",
            "id": "page",
            "label": "Page / Menu URL"
          }
        ]
      }
    ]
  }
{% endschema %}