{%- capture section_id -%}
  hero-slider-{{ section.id }}
{%- endcapture -%}

<section id="{{ section_id }}">
  <div class="hero-slider">
    {% for block in section.blocks %}
      <div class="hero-slider-slide" style="background-image: url({{ block.settings.image | img_url: 'master' }});">
        <div class="hero-slider-content container">
          <div class="hero-slider-content-inner">
            <h1 class="hero-slider-heading">{{ block.settings.heading }}</h1>
            <h2 class="hero-slider-subheading">{{ block.settings.subheading }}</h2>
            <div class="hero-slider-text">{{ block.settings.text }}</div>
            <a href="{{ block.settings.button_url }}" class="hero-slider-button">{{ block.settings.button_text }}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<!-- Style -->
<style></style>


<!-- Script -->
<script>
  $(function() {
    $('.hero-slider').slick({
      lazyLoad: 'ondemand',
      infinite: true,
      arrows: false,
      dots: true,
      autoplay: true,
      autoplaySpeed: 4000
    });
  });
</script>

<!-- Schema -->
{% schema %}
  {
    "name": "Hero Slider",
    "max_blocks": 10,
    "blocks": [
      {
        "type": "Slide",
        "name": "Slide",
        "settings": [
          {
            "label": "Image",
            "type": "image_picker",
            "id": "image"
          },
          {
            "label": "Title",
            "type": "text",
            "id": "heading"
          },
          {
            "label": "Subtitle",
            "type": "text",
            "id": "subheading"
          },
          {
            "label": "Content",
            "type": "richtext",
            "id": "text"
          }, {
            "label": "Button Text",
            "type": "text",
            "id": "button_text"
          }, {
            "label": "Button URL",
            "type": "url",
            "id": "button_url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Slider",
        "category": "Modules"
      }
    ]
  }
{% endschema %}