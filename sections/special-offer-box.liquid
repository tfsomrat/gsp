
<section class="container">
	<div class="row">
		{% if section.settings.title != blank %}
		<div class="col-12 col-sm-12 text-center">
			<h2 class="title hp  title-generic"><span>{{ section.settings.title }}</span></h2>
		</div>
		{% endif %}
		{% for block in section.blocks limit: section.blocks.size %}
		{% assign background_position = '' %}
		{% if block.settings.flush_image == true %}
		{% assign background_position = 'bottom left' %}
		{% else %}
		{% assign background_position = 'center center' %}
		{% endif %}
        <div class="col-12 col-sm-12 col-md-4 col-xl-4 pb-4 special-offer-box">
          <a href="{{ block.settings.button_url }}">
          <div style="background-color: {{ block.settings.background_colour }}">
              <div class="half background {% if block.settings.full_image %}full{% endif %} lazyload" height="300" data-bg="{{ block.settings.image_desktop | img_url: '420x' }}" style="background-position:{{ background_position }}">
              </div>
              {% unless block.settings.full_image %}
              <div class="half">
                  <h5 class="heading" style="color: {{ block.settings.text_colour }}"> {{ block.settings.heading }}</h5>
                  <p class="details" style="color: {{ block.settings.text_colour }}"> {{ block.settings.content }}</p>
                  {% if block.settings.button_url != blank %}
                  <a href="{{ block.settings.button_url }}" class="button secondary extra-slim special-offer-box-button" style="color: {{ block.settings.button_text_colour }}; background-color: {{ block.settings.button_colour }}">{{ block.settings.button_text }}</a>
                  {% endif %}
              </div>
              {% endunless %}
          </div>
          </a>
        </div>
        {% endfor %}
	</div>
</section>
<style>
.special-offer-box {
    border-radius: 5px;
}
.special-offer-box .half {
    width: 50%;
    padding:10px 0;
    vertical-align: middle;
    display: inline-block;
}
.special-offer-box .heading {
  line-height: 1.2;
  font-size: 19px;
  
}

.special-offer-box .background {
  height: 260px;
  width:40%;
  background-size: 140px;
  background-repeat: no-repeat;
}

.special-offer-box .background.full {
  height: 260px;
  width:100%;
  background-size: cover;
  background-repeat: no-repeat;
}
@media (max-width: 800px) {
  .special-offer-box-button {
    padding: 10px 20px!important;
  }
  .special-offer-box {
    margin-bottom: 15px;
  }
}
</style>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": "Special Offer Boxes list",
    "max_blocks": 8,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Special Offers"
	  }
    ],
    "blocks": [
      {
        "type": "offers",
        "name": "Special Offer Box",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Image ( 400 x 260  )"
          },
          {
              "type": "checkbox",
              "id": "full_image",
              "label": "Full image (hides text/buttons)",
              "default": true
          },
          {
            "type": "checkbox",
            "id": "flush_image",
      			"label": "Is this image flush with the box?",
      			"default": false
          },
          {
            "type": "color",
            "id": "background_colour",
            "label": "Background Colour"
          },
          {
            "type": "color",
            "id": "text_colour",
            "label": "Text Colour",
            "default": "#000000"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          },
          {
            "type": "color",
            "id": "button_colour",
            "label": "button Colour",
            "default": "#58b0e3"
          },
          {
            "type": "color",
            "id": "button_text_colour",
            "label": "Button Text Colour",
            "default": "#ffffff"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Special Offer Boxes",
        "category": "Modules",
        "blocks": [
          {
            "type": "offers"
          }
        ]
      }
    ]
  }
{% endschema %}
